#include <stdio.h>

int findMissingLinear(int arr[], int n) {
    int total = (n * (n + 1)) / 2;  // Sum of 1 to n
    int sum = 0;
    for(int i = 0; i < n - 1; i++) {
        sum += arr[i];
    }
    return total - sum;
}

int main() {
    int n;
    printf("Enter the value of n: ");
    scanf("%d", &n);

    int arr[n-1];
    printf("Enter %d sorted distinct elements (from 1 to %d) with one missing:\n", n-1, n);
    for(int i = 0; i < n-1; i++) {
        scanf("%d", &arr[i]);
    }

    int missing = findMissingLinear(arr, n);
    printf("Missing number is %d\n", missing);
    return 0;
}
